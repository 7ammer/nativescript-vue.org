<% if(entry.path) { %>
<option value="<%= meta.lang(current, null, entry.slug) %>" <%= current.slug === entry.slug ? 'selected' : '' %>>
    <%= entry.title %>
</option>
<% } else if(entry.children) { %>
<% if (entry.title) { %>
<optgroup label="<%= entry.title %>">
<% } %>
    <% entry.children
            .filter(item => item.locale ? item.locale === current.locale : true)
            .sort(meta.sortCategories)
    .forEach((item) => { %>
    <%- include('_partials/categories_select', { entry: item }) %>
    <% }) %>
<% if (entry.title) { %>
</optgroup>
<% } %>
<% } %>
